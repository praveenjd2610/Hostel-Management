<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <data>
    <record id="hgp_staff_form_view" model="ir.ui.view">
  <field name="name">hgp.staff.form</field>
  <field name="model">hgp.staff</field>
  <field name="arch" type="xml">
    <form string="Staff Profile">
      <group>
        <field name="staff_id"/>
        <field name="staff_name"/> <!-- inherited from res.users -->
       </group>
    </form>
  </field>
</record>

    <record id="hgp_staff_list" model="ir.ui.view">
    <field name="name">hgp.staff.list</field>
    <field name="model">hgp.staff</field>
    <field name="arch" type="xml">
       <list>
       <field name="staff_id"/>
        <field name="staff_name"/>
       </list>
    </field>
    </record>
    <record id="action_hgp_staff" model="ir.actions.act_window">
       <field name="name">Staff Profile</field>
       <field name="res_model">hgp.staff</field>
       <field name="view_mode">list,form</field>
    </record>
    </data>
</odoo>