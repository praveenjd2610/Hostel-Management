<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <data>
    <record id="hgp_student_form" model="ir.ui.view">
        <field name="name">hgp.student.form</field>
        <field name="model">hgp.student</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Student">
              <field name="name"/>
              <field name="student_id"/>
            </form>
        </field>
    </record>
    <record id="hgp_student_list" model="ir.ui.view">
        <field name="name">hgp.student.list</field>
        <field name="model">hgp.student</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="student_id"/>
            </list>
        </field>
    </record>

    <record id="action_hgp_student" model="ir.actions.act_window">
       <field name="name">Profile</field>
       <field name="res_model">hgp.student</field>
       <field name="view_mode">list,form</field>
    </record>

    <menuitem id="main_id" name="Parental App"/>
    <menuitem id="student_menu" name="Student Profile" parent="main_id" sequence="1" action="action_hgp_student" groups="library.group_student,library.group_admin"/>
    <menuitem id="staff_menu" name="Staff Profile" parent="main_id" sequence="2" action="action_hgp_staff" groups="library.group_staff,library.group_admin"/>
    </data>
</odoo>